<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="../favicon.ico" />
    <title><%= project.project_name %></title>
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="../apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="../favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="../favicon-16x16.png"
    />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />

    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../styles/app.css" />
  </head>

  <body>
    <%- include ('header'); %>
    <div
      class="vh-100 d-flex flex-column justify-content-center align-items-center"
    >
      <%- include('selectedProjView', {name: project.project_name, imgUrl:
      project.img_url, price: project.price_eth, featProj: which, desc:
      project.description}); %>
      <h3 class="topic">Status: </h3><span id="status">Active - </span><span id="mint-quant"></span><span> of
        <%=project.quantity  %> minted</span></h3>
      <div id="project-id" class="d-none"><%= project.id %></div>
    </div>

    <section class="justify-content-center">
      <div id="contracts" class="d-none"><%= contracts %></div>
      <div id="mints" class="d-none"><%= mints %></div>
      <div id="projects" class="d-none"><%= JSON.stringify(projects) %></div>
      <div class="text-center justify-content-center mt-5 mb-2">
        <h2>Mints from this project</h2>
        <p id="mint-message"></p>
      </div>
      <div class="mb-5">
        <div class="row justify-content-center">
          <div id="token-views"
            class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-3 text-center justify-content-center">
            <!-- the client side ejs will render these dynamically from the sript -->
          </div>
        </div>
      </div>
    </section>

    <%- include ('footer'); %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script type="module" src="../js/project.js"></script>
  </body>
</html>
